{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "watchPatterns": [
      "/news-summary/**"
    ], 
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "streamlit run streamlit_app.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
